---
import HubLayout from '@/layouts/HubLayout.astro'
import HubHero from '@/components/hub/HubHero.astro'
import AppCard from '@/components/hub/AppCard.astro'
import { siteConfig, apps } from '@/config'
---

<HubLayout title={siteConfig.site.title} description={siteConfig.site.description}>
  <HubHero />
  <section class="landing-section">
    <div class="landing-inner">
      <div class="app-cards-grid">
        {apps.map(app => (
          <AppCard app={app} />
        ))}
      </div>
    </div>
  </section>
</HubLayout>
