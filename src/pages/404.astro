---
import HubLayout from '@/layouts/HubLayout.astro'
import { siteConfig } from '@/config'
---

<HubLayout title={`404 - ${siteConfig.site.title}`} description="Page not found">
  <section class="landing-section hub-hero">
    <div class="landing-inner">
      <h1>404</h1>
      <p>Page not found. <a href="/">Go back home</a>.</p>
    </div>
  </section>
</HubLayout>

<style>
  a {
    color: var(--color-accent);
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }
</style>
