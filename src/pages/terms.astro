        </section>
      </div>
    </div>
  </section>
</HubLayout>

<style>
  .terms-section {
    padding: 6rem 1.5rem 4rem;
  }

  .terms-inner {
    max-width: 760px;
    margin: 0 auto;
  }

  .lang-nav {
    margin-bottom: 2rem;
    display: flex;
    gap: 1rem;
  }

  .lang-nav a {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
  }

  .lang-nav a:hover {
    text-decoration: underline;
  }

  .policy-block h1 {
    font-size: clamp(1.75rem, 3vw, 2rem);
    font-weight: var(--font-weight-bold);
    margin: 0 0 0.5rem;
    color: var(--text-primary);
  }

  .policy-block h2 {
    font-size: 1.125rem;
    font-weight: var(--font-weight-semibold);
    margin: 1.75rem 0 0.5rem;
    color: var(--text-primary);
  }

  .policy-block p {
    margin: 0.5rem 0 0;
    color: var(--text-primary);
  }

  .policy-block .muted {
    color: var(--text-secondary);
  }

  .policy-block ul {
    margin: 0.375rem 0 0;
    padding-left: 1.25rem;
  }

  .policy-block li {
    margin: 0.25rem 0;
    color: var(--text-primary);
  }

  .policy-block hr {
    border: 0;
    height: 1px;
    background: var(--border);
    margin: 2.5rem 0;
  }

  .policy-block a {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .policy-block a:hover {
    opacity: 0.8;
  }

  hr.section-divider {
    height: 4px;
    background: var(--text-primary);
    margin: 4rem 0;
    border: 0;
  }
</style>
