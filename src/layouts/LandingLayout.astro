---
import BaseLayout from './BaseLayout.astro'
import BaseHead from '@/components/layout/BaseHead.astro'
import Header from '@/components/layout/Header.astro'
import Footer from '@/components/layout/Footer.astro'
import GradientMask from '@/components/ui/GradientMask.astro'
import '@/styles/global.css'
import '@/styles/landing.css'

interface Props {
  title: string
  description: string
  accentColor?: string
  ogImage?: string
}

const { title, description, accentColor, ogImage } = Astro.props
---

<BaseLayout fullWidth={true}>
  <Fragment slot="head">
    <BaseHead title={title} description={description} ogImage={ogImage} />
    {accentColor && (
      <style set:html={`:root { --color-accent: ${accentColor}; --cta-primary-bg: ${accentColor}; }`}></style>
    )}
  </Fragment>
  <GradientMask />
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
</BaseLayout>
