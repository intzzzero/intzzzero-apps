---
import BaseLayout from './BaseLayout.astro'
import BaseHead from '@/components/layout/BaseHead.astro'
import Header from '@/components/layout/Header.astro'
import Footer from '@/components/layout/Footer.astro'
import '@/styles/global.css'
import '@/styles/landing.css'
import { apps } from '@/config'

interface Props {
  title: string
  currentApp: string
  currentLang: string
}

const { title, currentApp, currentLang } = Astro.props
const currentAppInfo = apps.find(app => app.id === currentApp)
---

<BaseLayout fullWidth={true}>
  <BaseHead slot="head" title={title} description={`${title} Documentation`} />
  <Header />
  <main class="docs-main">
    <div class="docs-header">
      <div class="docs-app-select">
        <button class="docs-dropdown-trigger" id="appDropdownTrigger">
          <img src={currentAppInfo?.icon} alt={currentAppInfo?.name} class="docs-dropdown-icon" />
          <span>{currentAppInfo?.name}</span>
          <svg class="docs-dropdown-arrow" width="12" height="12" viewBox="0 0 12 12" fill="none">
            <path d="M3 4.5L6 7.5L9 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <div class="docs-dropdown-menu" id="appDropdownMenu">
          {apps.map(app => (
            <a href={`/docs/${app.id}`} class={currentApp === app.id ? 'active' : ''}>
              <img src={app.icon} alt={app.name} class="docs-dropdown-icon" />
              <span>{app.name}</span>
            </a>
          ))}
        </div>
      </div>
      <div class="docs-lang-toggle">
        <a href={`/docs/${currentApp}`} class={currentLang === 'en' ? 'active' : ''}>EN</a>
        <a href={`/docs/${currentApp}/ko`} class={currentLang === 'ko' ? 'active' : ''}>KO</a>
      </div>
    </div>
    <article class="docs-content">
      <slot />
    </article>
  </main>
  <Footer />
</BaseLayout>

<script>
  function initDropdown() {
    const trigger = document.getElementById('appDropdownTrigger')
    const menu = document.getElementById('appDropdownMenu')

    if (!trigger || !menu) return

    // Remove old listeners by cloning the trigger
    const newTrigger = trigger.cloneNode(true) as HTMLElement
    trigger.parentNode?.replaceChild(newTrigger, trigger)

    newTrigger.addEventListener('click', (e) => {
      e.stopPropagation()
      menu.classList.toggle('open')
    })
  }

  // Global click handler (only register once)
  if (!(window as any).__docsDropdownInit) {
    (window as any).__docsDropdownInit = true
    document.addEventListener('click', () => {
      document.getElementById('appDropdownMenu')?.classList.remove('open')
    })
  }

  // Run on initial load and after each navigation
  initDropdown()
  document.addEventListener('astro:page-load', initDropdown)
</script>

<style>
  .docs-main {
    max-width: 800px;
    margin: 0 auto;
    padding: 5rem 1.5rem 4rem;
    min-height: calc(100vh - 200px);
  }

  .docs-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .docs-app-select {
    position: relative;
  }

  .docs-dropdown-trigger {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: var(--color-surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-size: var(--font-size-m);
    font-weight: var(--font-weight-semibold);
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .docs-dropdown-trigger:hover {
    border-color: var(--text-tertiary);
  }

  .docs-dropdown-icon {
    width: 1.5rem;
    height: 1.5rem;
    border-radius: 0.25rem;
  }

  .docs-dropdown-arrow {
    margin-left: 0.25rem;
    transition: transform 0.15s ease;
  }

  .docs-dropdown-menu {
    position: absolute;
    top: calc(100% + 0.5rem);
    left: 0;
    min-width: 200px;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-lg);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-0.5rem);
    transition: all 0.15s ease;
    z-index: 50;
  }

  .docs-dropdown-menu.open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .docs-dropdown-menu a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 0.875rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: var(--font-size-m);
    transition: all 0.15s ease;
  }

  .docs-dropdown-menu a:first-child {
    border-radius: var(--radius-md) var(--radius-md) 0 0;
  }

  .docs-dropdown-menu a:last-child {
    border-radius: 0 0 var(--radius-md) var(--radius-md);
  }

  .docs-dropdown-menu a:hover {
    background: var(--color-surface);
    color: var(--text-primary);
  }

  .docs-dropdown-menu a.active {
    background: var(--color-surface);
    color: var(--text-primary);
    font-weight: var(--font-weight-semibold);
  }

  .docs-lang-toggle {
    display: flex;
    background: var(--color-surface);
    border-radius: var(--radius-md);
    padding: 0.25rem;
  }

  .docs-lang-toggle a {
    padding: 0.375rem 0.875rem;
    border-radius: var(--radius-sm);
    font-size: var(--font-size-s);
    font-weight: var(--font-weight-semibold);
    color: var(--text-secondary);
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .docs-lang-toggle a:hover {
    color: var(--text-primary);
  }

  .docs-lang-toggle a.active {
    background: var(--color-accent);
    color: var(--cta-primary-text);
  }

  .docs-content {
    width: 100%;
  }

  /* Markdown Styles */
  .docs-content :global(h1) {
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: var(--font-weight-bold);
    margin: 0 0 1rem;
    color: var(--text-primary);
  }

  .docs-content :global(h2) {
    font-size: 1.375rem;
    font-weight: var(--font-weight-semibold);
    margin: 2.5rem 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border);
    color: var(--text-primary);
  }

  .docs-content :global(h3) {
    font-size: 1.125rem;
    font-weight: var(--font-weight-semibold);
    margin: 1.5rem 0 0.75rem;
    color: var(--text-primary);
  }

  .docs-content :global(h4) {
    font-size: 1rem;
    font-weight: var(--font-weight-semibold);
    margin: 1.25rem 0 0.5rem;
    color: var(--text-primary);
  }

  .docs-content :global(p) {
    margin: 0.75rem 0;
    color: var(--text-primary);
  }

  .docs-content :global(blockquote) {
    margin: 1rem 0;
    padding: 0.75rem 1rem;
    border-left: 3px solid var(--color-accent);
    background: var(--color-surface);
    border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
  }

  .docs-content :global(blockquote p) {
    margin: 0;
    color: var(--text-secondary);
  }

  .docs-content :global(ul),
  .docs-content :global(ol) {
    margin: 0.75rem 0;
    padding-left: 1.5rem;
  }

  .docs-content :global(li) {
    margin: 0.375rem 0;
    color: var(--text-primary);
  }

  .docs-content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .docs-content :global(a:hover) {
    opacity: 0.8;
  }

  .docs-content :global(code) {
    font-family: var(--mono);
    font-size: 0.875em;
    padding: 0.125rem 0.375rem;
    background: var(--code-bg);
    border-radius: 0.25rem;
  }

  .docs-content :global(pre) {
    margin: 1rem 0;
    padding: 1rem;
    background: var(--code-bg);
    border-radius: var(--radius-md);
    overflow-x: auto;
  }

  .docs-content :global(pre code) {
    padding: 0;
    background: none;
  }

  .docs-content :global(table) {
    width: 100%;
    margin: 1rem 0;
    border-collapse: collapse;
    font-size: var(--font-size-m);
  }

  .docs-content :global(th),
  .docs-content :global(td) {
    padding: 0.625rem 0.75rem;
    border: 1px solid var(--border);
    text-align: left;
  }

  .docs-content :global(th) {
    background: var(--color-surface);
    font-weight: var(--font-weight-semibold);
  }

  .docs-content :global(hr) {
    margin: 2rem 0;
    border: none;
    border-top: 1px solid var(--border);
  }

  .docs-content :global(strong) {
    font-weight: var(--font-weight-semibold);
  }

  @media (max-width: 480px) {
    .docs-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .docs-lang-toggle {
      align-self: flex-end;
    }
  }
</style>
