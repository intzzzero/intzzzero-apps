---
import type { FeatureListItem } from '@/types'

interface Props {
  items: FeatureListItem[]
  title?: string
  subtitle?: string
}

const { items, title, subtitle } = Astro.props
---

<section class="landing-section landing-section--alt">
  <div class="landing-inner">
    {title && <h2 class="section-title">{title}</h2>}
    {subtitle && <p class="section-subtitle">{subtitle}</p>}
    <ul class="feature-list">
      {items.map(item => (
        <li class="feature-list__item">
          <span class="feature-list__check">&#10003;</span>
          <span>{item.label}</span>
          <span class:list={[
            'feature-list__badge',
            item.tier === 'free' ? 'feature-list__badge--free' : 'feature-list__badge--pro'
          ]}>
            {item.tier === 'free' ? 'Free' : 'Pro'}
          </span>
        </li>
      ))}
    </ul>
  </div>
</section>
