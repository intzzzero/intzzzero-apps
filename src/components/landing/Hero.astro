---
import CTAButton from './CTAButton.astro'
import type { HeroData } from '@/types'

interface Props {
  data: HeroData
  appIcon?: string
}

const { data, appIcon } = Astro.props
---

<section class="landing-section hero-section">
  <div class="landing-inner">
    {appIcon && <img src={appIcon} alt="" class="hero-icon hero-animate-in hero-icon-float" width="96" height="96" />}
    <h1 class="hero-animate-in">{data.headline}</h1>
    <p class="hero-subtitle hero-animate-in">{data.subheadline}</p>
    <div class="hero-ctas hero-animate-in">
      <CTAButton href={data.primaryCTA.href} variant={data.primaryCTA.variant} class="cta-pulse">
        {data.primaryCTA.label}
      </CTAButton>
      {data.secondaryCTA && (
        <CTAButton href={data.secondaryCTA.href} variant={data.secondaryCTA.variant}>
          {data.secondaryCTA.label}
        </CTAButton>
      )}
      {data.docsCTA && (
        <CTAButton href={data.docsCTA.href} variant={data.docsCTA.variant || 'ghost'}>
          {data.docsCTA.label}
        </CTAButton>
      )}
    </div>
    {data.screenshot && (
      <div class="hero-screenshot-wrapper hero-animate-in">
        <img
          src={data.screenshot}
          alt={data.screenshotAlt}
          loading="eager"
          decoding="async"
        />
      </div>
    )}
  </div>
</section>
