---
import type { FeatureShowcaseData } from '@/types'

interface Props {
  data: FeatureShowcaseData
  alt?: boolean
}

const { data, alt = false } = Astro.props
const isReversed = data.imagePosition === 'left'
---

<section class:list={['landing-section', { 'landing-section--alt': alt }]}>
  <div class="landing-inner">
    <div class:list={[
      'feature-showcase',
      { 'feature-showcase--reversed': isReversed },
      { 'feature-showcase--no-image': !data.screenshot }
    ]}>
      <div class="feature-showcase__content" data-reveal="fade-up">
        {data.badge && (
          <span class="feature-showcase__badge">{data.badge}</span>
        )}
        <h2 class="feature-showcase__title">{data.title}</h2>
        <p class="feature-showcase__description">{data.description}</p>
      </div>
      {data.screenshot && (
        <div class="feature-showcase__image" data-reveal={isReversed ? 'fade-right' : 'fade-left'}>
          <img
            src={data.screenshot}
            alt={data.screenshotAlt}
            loading="lazy"
            decoding="async"
          />
        </div>
      )}
    </div>
  </div>
</section>
