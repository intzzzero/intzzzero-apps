---
import type { FeatureGridItem } from '@/types'

interface Props {
  items: FeatureGridItem[]
  title?: string
  subtitle?: string
}

const { items, title, subtitle } = Astro.props
---

<section class="landing-section">
  <div class="landing-inner">
    {title && <h2 class="section-title" data-reveal="fade-up">{title}</h2>}
    {subtitle && <p class="section-subtitle" data-reveal="fade-up">{subtitle}</p>}
    <div class="feature-grid" data-reveal-stagger>
      {items.map((item, i) => (
        <div class="feature-grid__card" data-reveal="fade-up" style={`--stagger-index: ${i}`}>
          <span class="feature-grid__icon">{item.icon}</span>
          <h3 class="feature-grid__title">{item.title}</h3>
          <p class="feature-grid__description">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
