---
import type { FeatureGridItem } from '@/types'

interface Props {
  items: FeatureGridItem[]
  title?: string
  subtitle?: string
}

const { items, title, subtitle } = Astro.props
---

<section class="landing-section">
  <div class="landing-inner">
    {title && <h2 class="section-title">{title}</h2>}
    {subtitle && <p class="section-subtitle">{subtitle}</p>}
    <div class="feature-grid">
      {items.map(item => (
        <div class="feature-grid__card">
          <span class="feature-grid__icon">{item.icon}</span>
          <h3 class="feature-grid__title">{item.title}</h3>
          <p class="feature-grid__description">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
