---
interface Props {
  class?: string
}

const { class: className = '' } = Astro.props
---

<div class:list={['section-divider', className]} aria-hidden="true"></div>

<style>
  .section-divider {
    width: 100%;
    height: 1px;
    background: var(--border);
    max-width: var(--landing-content-width);
    margin: 0 auto;
  }
</style>
